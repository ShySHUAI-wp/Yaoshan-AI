<view class="login-container">
  <!-- 顶部图标&标题 -->
  <view class="logo-area">
    <image class="logo" src="/assets/1a196f3322c2c73924fecdeaf73ab2cb.jpg"></image>
    <view class="welcome-text">欢迎使用</view>
    <view class="app-name">智膳坊--AI个性化药膳推荐与健康管理平台</view>
  </view>

  <!-- 手机号输入框 -->
  <view class="form-item">
    <view class="label">手机号码</view>
    <view class="input-wrap">
      <input 
        class="input" 
        placeholder="请输入手机号码" 
        bindinput="bindPhoneInput" 
        value="{{phone}}"
      />
      <image 
        class="clear-icon" 
        src="/assets/删除.png" 
        mode="aspectFit" 
        bindtap="clearPhone"
        wx:if="{{phone.length > 0}}"
      ></image>
    </view>
  </view>
  <view class="form-item">
    <view class="label">验证码</view>
    <view class="input-wrap">
      <input 
        class="input" 
        placeholder="请输入验证码" 
        bindinput="bindCodeInput" 
        value="{{code}}"
      />
      <button 
        class="get-code-btn {{codeBtnDisabled ? 'disabled' : ''}}" 
        bindtap="getVerificationCode"
        disabled="{{codeBtnDisabled}}"
      >{{codeBtnText}}</button>
    </view>
  </view>
  <button class="login-btn" bindtap="handleLogin">登录</button>
  <view class="other-login">
    <view class="divider">
      <view class="line"></view>
      <view class="text">其他方式登录</view>
      <view class="line"></view>
    </view>
    <view class="login-types">
      <view class="login-type" bindtap="wechatLogin">
        <image src="/assets/微信.png" mode="aspectFit"></image>
        <view>微信</view>
      </view>
      <view class="login-type" bindtap="phoneLogin">
        <image src="/assets/手机.png" mode="aspectFit"></image>
        <view>手机号</view>
      </view>
      <view class="login-type" bindtap="visitorLogin">
        <image src="/assets/用户.png" mode="aspectFit"></image>
        <view>访客登录</view>
      </view>
    </view>
  </view>

  <!-- 用户协议 -->
  <view class="agreement">
    登录即表示同意《<text class="link">用户协议</text>》和《<text class="link">隐私政策</text>》
  </view>
</view>