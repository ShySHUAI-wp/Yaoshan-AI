/* 全局样式 */
page {
  background-color: #fff;
  font-family: -apple-system, BlinkMacSystemFont, "Helvetica Neue", Arial, sans-serif;
}

.login-container {
  padding: 60rpx 30rpx;
  box-sizing: border-box;
}

/* 顶部图标&标题 */
.logo-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}
.logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}
.welcome-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}
.app-name {
  font-size: 28rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 表单项通用样式 */
.form-item {
  margin-bottom: 40rpx;
}
.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}
.input-wrap {
  display: flex;
  align-items: center;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
}
.input {
  flex: 1;
  height: 80rpx;
  font-size: 30rpx;
}
.clear-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 验证码按钮 */
.get-code-btn {
  width: 200rpx;
  height: 60rpx;
  line-height: 30rpx;
  background-color: #1D4331;
  color: #fff;
  font-size: 26rpx;
  border-radius: 30rpx;
}
.get-code-btn.disabled {
  background-color: #ccc;
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  height: 80rpx;
  line-height: 50rpx;
  background-color: #1D4331;
  color: #fff;
  font-size: 30rpx;
  border-radius: 45rpx;
  margin-top:20rpx;
}
.login-btn::after {
  border: none;
}
.other-login {
  margin-top: 80rpx;
}
.divider {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}
.line {
  flex: 1;
  height: 1rpx;
  background-color: #ddd;
}
.text {
  font-size: 26rpx;
  color: #999;
  padding: 0 20rpx;
}
.login-types {
  display: flex;
  justify-content: space-around;
}
.login-type {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.login-type image {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 10rpx;
}
.login-type view {
  font-size: 26rpx;
  color: #666;
}
.agreement {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin-top: 60rpx;
}
.link {
  color: #1D4331;
  text-decoration: underline;
}