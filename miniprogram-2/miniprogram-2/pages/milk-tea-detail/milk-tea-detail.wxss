.detail-container {
  padding: 20rpx;
}
.detail-img {
  width: 100%;
  margin-bottom: 10rpx;
}
.detail-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.detail-desc, .detail-tag, .detail-collect {
  font-size: 28rpx;
  margin-bottom: 8rpx;
}
.detail-badge {
  display: inline-block;
  padding: 4rpx 12rpx;
  background: #f00;
  color: #fff;
  border-radius: 4rpx;
  font-size: 24rpx;
}