page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, "Helvetica Neue", Helvetica, Arial, sans-serif;
}
.top-container {
  position: relative;
  width: 100%;
  height: 400rpx;
}
.bg-image {
  width: 100%;
  height: 100%;
  opacity: 0.8;
}
.user-info {
  position: absolute;
  top: 60rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
}
.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
}
.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-top: 16rpx;
}
.user-tag {
  font-size: 28rpx;
  color: #c8102e;
  margin-top: 8rpx;
}
.health-days {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}
.health-card {
  background-color: #fff;
  margin: 20rpx;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.card-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}
.view-detail {
  font-size: 27rpx;
  color: #c8102e;
}
.update-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 24rpx;
}
.health-items {
  display: flex;
  justify-content: space-around;
}
.health-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.item-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 8rpx;
}
.item-text {
  font-size: 24rpx;
  color: #666;
}
.account-section {
  background-color: #fff;
  margin: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  padding: 24rpx;
  border-bottom: 1rpx solid #eee;
}
.account-list {
  display: flex;
  flex-direction: column;
}
.account-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #eee;
}
.account-item:last-child {
  border-bottom: none;
}
.arrow-right {
  width: 30rpx;
  height: 30rpx;
  margin-left: auto;
}
.logout-item {
  background-color: #fff;
  margin: 20rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  padding: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.logout-item .item-text {
  color: #c8102e;
}