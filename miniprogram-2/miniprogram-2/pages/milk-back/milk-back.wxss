/* 全局样式重置 & 基础设置 */
page {
  background-color: #f9f9f9;
  font-family: -apple-system, BlinkMacSystemFont, "Helvetica Neue", Arial, sans-serif;
}

.page-container {
  padding: 0;
  box-sizing: border-box;
}

/* 顶部Banner */
.banner {
  position: relative;
  width: 100%;
}
.banner image {
  width: 100%;
}
.banner-title {
  position: absolute;
  bottom: 20rpx;
  left: 30rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  text-shadow: 1rpx 1rpx 2rpx rgba(0, 0, 0, 0.5);
}

/* 信息卡片通用样式 */
.info-card, .section-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}
/* 基本信息模块 */
.info-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}
.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 20rpx;
}
.tag {
  background-color: #e6f7e9;
  color: #1D4331;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}
.info-desc {
  font-size: 28rpx;
  color: #666;
}

/* section通用标题 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
  border-left: 8rpx solid #2d8843;
  padding-left: 16rpx;
}

/* 体质适配说明内容 */
.section-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #666;
}

/* 药膳成分列表 */
.ingredient-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}
.ingredient-item {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #666;
}
.ingredient-name {
  flex: 1;
}
.ingredient-amount {
  color: #999;
}

/* 制作步骤列表 */
.steps-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}
.step-item {
  display: flex;
  align-items: flex-start;
}
.step-num {
  background-color: #2d8843;
  color: #fff;
  font-size: 24rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  flex-shrink: 0;
}
.step-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #666;
}

/* 忌口建议列表 */
.taboo-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}
.taboo-item {
  display: flex;
  align-items: flex-start;
}
.taboo-tag {
  color: #e53935;
  font-size: 32rpx;
  margin-right: 12rpx;
  line-height: 1.2;
}
.taboo-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}